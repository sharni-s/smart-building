<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Sharni">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/add-room-styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.css">

    <title>Add Room</title>
</head>

<body class="common-container">

    <div class="navigation-bar">
        <%- include('navbar.ejs') %>
    </div>

    <div class="row add-room-title">
        <p class="text-center fs-1">Add Room</p>
    </div>

    <div class="row add-room-container">
        <form action="/add-room" method="POST" class="add-room-form mx-auto">
            <div class="">
                <label for="roomName" class="form-label">Room Name</label>
                <input type="text" class="form-control" name="roomName" required>
            </div>
            <p class="mt-2 mb-3" style="color: rgb(194, 0, 0); display: <%= error_display %>;">
                <%= error_message %>
            </p>
            <div class="mb-3">
                <label for="floorNo" class="form-label">Floor</label>
                <input type="number" class="form-control" name="floorNo" required>
            </div>
            <label for="lights" class="form-label">Lights</label>
            <select name="lights" class="choices-multiple-remove-button" placeholder="Select" multiple>
                <% freeDevices.freeLights.forEach(device=> { %>
                    <option value="<%= device._id %>">
                        <%= device._id %> - <%= device.name %>
                    </option>
                <% }); %>
            </select>
            <label for="aircons" class="form-label">Air Conditioners</label>
            <select name="aircons" class="choices-multiple-remove-button" placeholder="Select" multiple>
                <% freeDevices.freeAircons.forEach(device=> { %>
                    <option value="<%= device._id %>">
                        <%= device._id %> - <%= device.name %>
                    </option>
                <% }); %>
            </select>
            <label for="tempSensors" class="form-label">Temperature Sensors</label>
            <select name="tempSensors" class="choices-multiple-remove-button-max-1" placeholder="Select" multiple>
                <% freeDevices.freeTempSensors.forEach(device=> { %>
                    <option value="<%= device._id %>">
                        <%= device._id %> - <%= device.name %>
                    </option>
                <% }); %>
            </select>
            <label for="ambientSensors" class="form-label">Ambient Sensors</label>
            <select name="ambientSensors" class="choices-multiple-remove-button-max-1" placeholder="Select" multiple>
                <% freeDevices.freeAmbientSensors.forEach(device=> { %>
                    <option value="<%= device._id %>">
                        <%= device._id %> - <%= device.name %>
                    </option>
                <% }); %>
            </select>
            <label for="motionSensors" class="form-label">Motion Sensors</label>
            <select name="motionSensors" class="choices-multiple-remove-button-max-1" placeholder="Select" size="5"
                multiple>
                <% freeDevices.freeMotionSensors.forEach(device=> { %>
                    <option value="<%= device._id %>">
                        <%= device._id %> - <%= device.name %>
                    </option>
                <% }); %>
            </select>
            <button type="submit" class="btn btn-dark btn-lg w-100 mt-2 mb-3">Submit</button>
        </form>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.js"></script>
    <!-- Custom Script -->
    <script src="/js/add-room-app.js"></script>

</body>

</html>